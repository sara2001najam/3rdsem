Console.WriteLine("Enter any 5 numbers");
Console.WriteLine("\v");
int[] array1 = new int[5];
int i = 0;
for(i = 0; i < 5; i++)
{
    Console.Write("Enter value {0}:  ", i);
    array1[i] = Convert.ToInt32(Console.ReadLine());    
}


    int sum = array1.Sum();
    int avg = sum / 5;
    Console.WriteLine("{0}", sum);
    Console.WriteLine("{0}", avg);
